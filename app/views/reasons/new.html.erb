<h1>New reason</h1>

<% form_for :reason, @reason, :url => reasons_path, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :argument %><br />
    <%= f.text_area :argument %>
  </p>
  <p>
    <%= f.label :image %><br />
		<%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', reasons_path %>