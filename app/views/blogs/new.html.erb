<h2 class="underline">New Blog Post</h2>

<% form_for @blog do |f| %>
	
	<p>
	<%= f.label :title %>:<br/>
	<%= f.text_field :title %>
	</p>
	<p>
	<%= f.label :article %>:<br/>
	<%= f.text_area :article %>
	</p>
	
	
	<%= f.submit "Create", :class => "add"%>
	
<% end %>

<p>
<%= link_to 'Show All', blogs_path %>
</p>