<% form_for :item, :url => items_path, :html => {:multipart => true} do |f| %>
	
	<p>
		<%= f.label :name %>:
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :category_id, 'Category' %>
		<%= f.collection_select :category_id, Category.all, :id, :title, :prompt => "select a category"%>
	</p>
	
	<p>
		<%= f.label :buy_now, 'Buy Link' %>
		<%= f.text_field :buy_now %>
	</p>
		
	<p>
		<%= f.label :image %>:
		<%= f.file_field :image %>
		<!-- <input type="submit" value="Create" /> -->
	</p>
	
	<p>
		<%= submit_tag 'Create' %>
	</p>
	
<% end  %>

<%= link_to 'Show All', '/items' %>