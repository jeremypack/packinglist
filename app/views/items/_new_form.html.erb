<% form_for :item, :url => items_path, :html => {:multipart => true} do |f| %>	
	<!-- <p> -->
		<%= f.label :name %>:
		<%= f.text_field :name, :size => '20'%>

		<%= f.hidden_field :category_id, :value => "8"%>
		
		<%= f.label :image %>:
		<%= f.file_field :image, :size => '20' %>
		<!-- <input type="submit" value="Create" /> -->
	<!-- </p> -->
		<%= submit_tag 'Create Item', :class => 'add' %>

<% end  %>