<h1>Editing item</h1>

<% form_for(@item) do |f| %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
	<p>
		<%= f.collection_select :category_id, Category.all, :id, :title, :prompt => "select a category" %>
	</p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @item %> |
