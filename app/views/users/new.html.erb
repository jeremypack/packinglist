<div id="login_form">

<fieldset>
	<legend>Sign Up</legend>
<% @user.password = @user.password_confirmation = nil %>

<% form_for :user, :url => users_path do |f| -%>

<p><%= f.label :name %>:<br/>
<%= f.text_field :name, :class => 'create_input' %></p>

<p><%= label_tag 'username' %>:<br/>
<%= f.text_field :login, :class => 'create_input' %></p>

<p><%= label_tag 'email' %>:<br/>
<%= f.text_field :email, :class => 'create_input' %></p>

<p><%= label_tag 'password' %>:<br/>
<%= f.password_field :password, :class => 'create_input' %></p>

<p><%= label_tag 'password_confirmation', 'Confirm Password' %>:<br/>
<%= f.password_field :password_confirmation, :class => 'create_input' %></p>



<p><%= submit_tag 'Sign up', :class => 'submit_form' %></p>
<% end -%>
</fieldset>

</div>

<div id="login_details">
	<%= error_messages_for :user %>
	<%= image_tag '/images/signup.jpg' %>
